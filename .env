
# =============================================================================
# Automation Kit - Configuración de Entorno para cPanel
# Compatible con docker-compose.yml existente
# =============================================================================

# CONFIGURACIÓN DE DOMINIO
# ============================================================================
N8N_HOST=n8n.rocketmonk.com
N8N_PROTOCOL=https
N8N_PORT=5678
N8N_LISTEN_ADDRESS=0.0.0.0
WEBHOOK_URL=https://n8n.rocketmonk.com
N8N_EDITOR_BASE_URL=https://n8n.rocketmonk.com

# CONFIGURACIÓN DE BASE DE DATOS POSTGRES
# ============================================================================
POSTGRES_USER=root
POSTGRES_PASSWORD=password
POSTGRES_DB=n8n
POSTGRES_PORT=5432

# CONFIGURACIÓN DE N8N
# ============================================================================
N8N_ENCRYPTION_KEY=super-secret-key
N8N_USER_MANAGEMENT_JWT_SECRET=even-more-secret
N8N_DEFAULT_BINARY_DATA_MODE=filesystem

# CONFIGURACIÓN DE OLLAMA
# ============================================================================
OLLAMA_HOST=ollama:11434
OLLAMA_PORT=11434
OLLAMA_MAX_MODELS=2
OLLAMA_KEEP_ALIVE=5m

# CONFIGURACIÓN DE QDRANT
# ============================================================================
QDRANT_PORT=6333
QDRANT_GRPC_PORT=6334

# CONFIGURACIÓN DE REDIS (OPCIONAL)
# ============================================================================
REDIS_PASSWORD=automation_redis_password
REDIS_PORT=6379

# CONFIGURACIÓN DE PUERTOS PARA CPANEL
# ============================================================================
HTTP_PORT=8080
HTTPS_PORT=8443

# CONFIGURACIÓN GENERAL
# ============================================================================
TIMEZONE=America/Santiago
COMPOSE_PROJECT_NAME=automation-kit

# CONFIGURACIÓN PARA HOSTING COMPARTIDO
# ============================================================================
COMPOSE_MEMORY_LIMIT=2G
COMPOSE_CPU_LIMIT=2.0

# CONFIGURACIÓN DE RED
# ============================================================================
NETWORK_NAME=automation_network